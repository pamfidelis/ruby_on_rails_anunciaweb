<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Adminstradores</h1>

                    <% if @category.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

                        <ul>
                            <% @category.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>

                        </div>
                    <% end %>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <%= action %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="col-lg-6">
                                <%= form_for([:backoffice, @admin]) do |f| %>
                                    
                                    <div class="form-group">
                                        <label>Email</label>
                                        <%= f.text_field :email, class:"form-control", placeholder:"Email do Admin" %>
                                    </div>
                                    <div class="form-group">
                                        <label>Senha</label>
                                        <%= f.password_field :password, class:"form-control", placeholder:"Senha" %>
                                    </div>
                                    <div class="form-group">
                                        <label>Senha</label>
                                        <%= f.password_field :password_confrmation, class:"form-control", placeholder:"Confirmação de senha" %>
                                    </div>

                                    <button type="submit" class="btn btn-default">Salvar</button>
                                <% end %>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>