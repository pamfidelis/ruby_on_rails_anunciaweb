<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categorias</h1>
                <% if notice %>
                  <div class="alert alert-success">
                      <%= notice %>
                  </div>
                <% end %>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Listando Categorias
                            <%= link_to new_backoffice_categories_path, class: "btn btn-success btn-circle pull-right", style: "margin-top:-5px" do %>
                              <i class="fa fa-plus"></i>
                            <% end %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Descrição</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @categories.each do |category| %>
                                        <tr>
                                            <td><%= category.id %></td>
                                            <td><%= category.description %></td>
                                            <td style="width: 150px">
                                                <%= link_to edit_backoffice_categories_path(:id), class: "btn btn-primary btn-circle" do %>
                                                    <i class="fa fa-edit"></i>
                                                <% end %>
                                                <%= link_to backoffice_categories_path, class: "btn btn-danger btn-circle", disabled: true do %>
                                                    <i class="fa fa-minus"></i>
                                                <% end %>
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>


            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>