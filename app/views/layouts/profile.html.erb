<!DOCTYPE html>
<html>
  <head>
    <title>Anunciaweb</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'site', media: 'all' %>
    <%= stylesheet_link_tag    'site/profile/profile', media: 'all' %>
    <%= javascript_include_tag 'site' %>
    <%= javascript_include_tag 'site/profile/profile' %>
  </head>

  <body>
    <div id="wrapper">
      <%= render partial: "layouts/site_shared/navigation" %>
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <%= link_to 'Dashboard', site_profile_dashboard_index_path %>
          </li>
          <li class="sidebar-brand">
            <%= link_to 'Meus anúncios', site_profile_ads_path %>
          </li>
          <li class="sidebar-brand">
            <%= link_to 'Novo anúncio', new_site_profile_ad_path %>
          </li>
        </ul>
      </div>
      <!-- /#sidebar-wrapper -->
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <%= render partial: "layouts/shared/notifications"%>

  </body>
</html>